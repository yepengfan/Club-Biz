<%= render template: 'layouts/account' %>
<aside class="right-side">                
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Add A Member
            <small>Enter member's information</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">


                    <%= form_for @user, :url => confirm_memberships_path, method: :post do |f|%>
                    <div class="box-body">
                        <div class="form-group">
                            <label>Email</label>
                            <%= f.text_field :email, class:"form-control", placeholder: "Enter email address"%>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <%= f.text_field :password, class: "form-control", placeholder:"Enter password" %>
                        </div>
                        <div class="form-group">
                            <label>First Name</label>

                            <%= f.text_field :first_name, class: "form-control", placeholder: "Enter firstname" %>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            
                            <%= f.text_field :last_name, class: "form-control", placeholder: "Enter lastname" %>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            
                            <%= f.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
                        </div>
                        <div>
                            <div class="row" >
                                <div class="col-xs-4"></div>
                              
                                
                                <div class="col-xs-4">
                                    <%= f.submit "Submit", class: "btn btn-success btn-lg btn-block"%>
                                </div>
                                <div class="col-xs-4"></div>
                                
                                
                            </div>
                        </div>
                    </div>
                    <% end %>

                </div>
            </div><!-- /.box -->

        </div>
    </section><!-- /.content --> 
    
            </aside><!-- /.right-side -->