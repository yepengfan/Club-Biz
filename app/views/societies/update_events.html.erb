<%= render template: 'layouts/account' %>
<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Event Registration
            <small>Please enter event information</small>
        </h1>
    </section>
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="box-title">Register A New Event</h2>
            </div><!-- /.box-header -->
        
            <!-- form start -->
            <div class="box-body">
                <%= form_for @event, url: confirm_events_path, :html => { :multipart => true } do |f| %>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Event Title</label>
                                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Event Name" %>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Select Category</label>
                                    <select name = "category" class="form-control">
                                        <option value="Social" >Social</option>
                                        <option value="Science" >Science</option>
                                        <option value="Art" >Art</option>
                                        <option value="Entertainment" >Entertainment</option>
                                        <option value="Food&Delights" >Food&Delights</option>
                                    </select>
                                </div>

                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>Event Time</label>
                                <!-- start -->
                           
                                <%= f.text_field :start,class: "form-control", placeholder: "dd/mm/yyyy hour:min"%>
                            </div>&nbsp;&nbsp;
                            <div class="col-md-4">
                                <label>Event Date</label>
                                <!-- end -->
                                
                                <%= f.text_field :end,class: "form-control", placeholder: "dd/mm/yyyy hour:min"%>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Number of Tickets</label>
                                    <%= f.text_field :total, class: "form-control", placeholder: "Enter Society Name"%>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <%= f.text_area :desc, :cols => 20, :rows => 10, class: "form-control",placeholder: "Enter the Society Description" %>
                        </div>


                        <div class="form-group">
                            <label>Attendee</label>
                            <div class="checkbox">
                                <label class="">
                                    <div class="icheckbox_minimal checked" aria-checked="true" aria-disabled="false" style="position: relative;">
                                        <input type="checkbox" style="position: absolute; opacity: 0;">
                                        <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background-color: rgb(255, 255, 255); border: 0px; opacity: 0; background-position: initial initial; background-repeat: initial initial;">
                                        </ins>
                                    </div>Membership Required</label></div>

                                    <div class="checkbox">
                                        <label class="">
                                            <div class="icheckbox_minimal checked" aria-checked="true" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background-color: rgb(255, 255, 255); border: 0px; opacity: 0; background-position: initial initial; background-repeat: initial initial;"></ins></div>Ticket Required</label></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Upload Images</label>
                                <div class="form-group">
                                    <div><label for="exampleInputFile"></label></div>
                                        <p class="help-block">The image size should be up to 2 MB.</p>
                                            <div class="row-fluid">
                                                <div class="col-xs-4">
                                                    <%= f.file_field :photo_1%>
                                                </div>
                                                <div class="col-xs-4">
                                                    <%= f.file_field :photo_2%>
                                                </div>
                                                <div class="col-xs-4">
                                                    <%= f.file_field :photo_3%>
                                                </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
<!--                                 <label>Ticketing</label>
                                <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Ticket Amount</label>
                                        <input type="text" class="form-control" placeholder="Enter ticket amount">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="text" class="form-control" placeholder="Enter ticket price">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Pickup Location</label>
                                        <input type="text" class="form-control" placeholder="Enter location">
                                    </div>
                                </div>
                                </div> -->
                            </div>
                        </div><br/><br/><br/><br/>

                        <div class="row" >
                            <div class="col-xs-4"></div>
                            <div class="col-xs-4">
                                <%= f.submit "Submit", class: "btn btn-success btn-lg btn-block"%>
                            </div>
                            <div class="col-xs-4"></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

    </div>