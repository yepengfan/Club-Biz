    <body class="bg-black">
        <div class="form-box" id="login-box">
            <div class="header bg-blue">University Administrator <br>Sign In</div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="body bg-gray">
                    <div class="form-group">
                        <%= f.email_field :email, :class=>"form-control", :placeholder => "User ID",autofocus: true %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password, :class=>"form-control", :placeholder => "Password", autocomplete: "off" %>
                    </div>          
                    <div class="form-group">
                          <% if devise_mapping.rememberable? -%>
                          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                          <% end -%>
                    </div>
                </div>
                <div class="footer"> 
                    <%= f.submit "Sign in",:class=>"btn bg-blue btn-block" %>                                                                           

                </div>
            <% end %>


            <div class="margin text-center">
                <span>Ask IT support here!</span>

            </div>
        </div> 
 
    </body>
    