<%= form_for @event, :html => { :multipart => true } do |f| %>
<p>
	<%= f.label :name%>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :category%>
	<!-- 	<%= f.select :category, [['Activity_1', 1], ['Activity_2', 2], ['Activity_3', 3]]%> -->
</p>
<p>
	<%= f.label :start%>
	<%= f.text_field :start%>
</p>
<p>
	<%= f.label :end%>
	<%= f.text_field :end%>
</p>
<p>
	<%= f.label :total%>
	<%= f.text_field :total%>
</p>
<p>
	<%= f.label :desc%>
	<%= f.text_area :desc, :cols => 20, :rows => 10 %>
</p>
<p>
	<%= f.file_field :photo %>
</p>
<p>
	<%= f.submit "Submit"%>
</p>
<% end %>