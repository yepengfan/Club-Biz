<body class="bg-gray" >
        <%= render 'layouts/home' %>
        <%= render 'layouts/nav' %>
        <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                        <div class="box-header">
                                <%= form_for @event, url: reserve_tickets_path, method: :post do |f|%>
                                <div class="row">
                                        <div class="col-md-2">
                                        </div>
                                        <div class="col-md-8">
                                                <h1 class="box-title"><b><%= @event.name %></b></h1>
                                        </div>
                                        <div class="col-md-2">
                                        </div>
                                </div>
                        </div><!-- /.box-header -->

                        <div class="box-body">
                                <div class="row">
                                       <div class="col-md-2">
                                       </div>
                                       <div class="col-md-8">
                                        <div class="box box-solid">
                                               <div class="box-header">
                                                      <h3 class="box-title"></h3>
                                              </div><!-- /.box-header -->
                                              <div class="box-body">
                                                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                                        <ol class="carousel-indicators">
                                                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                                                <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                                                <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                                                        </ol>
                                                        <div class="carousel-inner">
                                                                <div class="item active">
                                                                        <%= image_tag (@event.photo_1), alt: "First slide" %>
                                                                        <div class="carousel-caption">
                                                                                First Slide
                                                                        </div>
                                                                </div>
                                                                <div class="item">
                                                                        <%= image_tag (@event.photo_2), alt: "Second slide" %>
                                                                        <div class="carousel-caption">
                                                                                Second Slide
                                                                        </div>
                                                                </div>
                                                                <div class="item">
                                                                        <%= image_tag (@event.photo_3), alt: "Third slide" %>
                                                                        <div class="carousel-caption">
                                                                                Third Slide
                                                                        </div>
                                                                </div>
                                                        </div>
                                                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                                                <span class="glyphicon glyphicon-chevron-left"></span>
                                                        </a>
                                                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                                                <span class="glyphicon glyphicon-chevron-right"></span>
                                                        </a>
                                                </div>
                                        </div><!-- /.box-body -->
                                </div>
                        </div>
                        <div class="col-md-2">
                        </div>
                </div>



                <!-- description -->
                <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8">
                                <div class="box box-solid box-info">
                                        <div class="box-header">
                                                <h3 class="box-title">Event Intro</h3>
                                        </div>
                                        <div class="box-body">
                                                <p>
                                                        <%= @event.desc %>
                                                </p>
                                        </div><!-- /.box-body -->
                                </div>
                        </div>
                        <div class="col-md-2">
                        </div>
                </div>


                <!-- info -->
                <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-4">
                                <div class="box box-solid box-primary">
                                        <div class="box-header">
                                                <h3 class="box-title">Info</h3>
                                        </div>
                                        <div class="box-body">
                                                <p><b>Start Date: </b><%= @event.start %> </p>
                                                <p><b>End Data: </b><%= @event.end %></p>
                                                <p><b>Remain Ticket: </b><%= @event.remain %></p>
                                        </div><!-- /.box-body -->
                                </div>
                        </div>
                        <div class="col-md-4">
                                <label>Choose Booking Amount   <small>(Up to 4 for each user.)</small></label>
                                <div>
                                        <div class="form-group">
                                        
                                                
                                            
                                                <% if @event.remain == 3 %>
                                                <%= select_tag "amount", options_for_select(["1", "2", "3"]), class: "form-control" %>
                                                <% elsif @event.remain == 2 %>
                                                <%= select_tag "amount", options_for_select(["1", "2"]), class: "form-control"%>
                                                <% elsif  @event.remain == 1 %>
                                                <%= select_tag "amount", options_for_select(["1"]), class: "form-control"%>
                                                <% elsif @event.remain == 0%>
                                                <%= select_tag "amount", options_for_select(["0"]), class: "form-control"%>
                                                <% else %>
                                                <%= select_tag "amount", options_for_select(["1", "2", "3", "4"]), class: "form-control"%>
                                                <% end %>
                                               
                                        </div>
                                </div>
                                <div>
                                        
                                        <%= f.submit "Book Now",class: "btn btn-warning btn-lg btn-block" %>
                                        <button class="btn btn-info btn-lg btn-block">Visite Our Site</button>
                                </div>
                        </div>
                        <div class="col-md-2">
                        </div>
                </div><br/>
                <% end %>



                <!-- comments -->
                <div class="row">
                        <div class="col-md-2">
                        </div>

                        <div class="col-md-8">
                                <div class="box">

                                        <div class="box-header">
                                                <h3 class="box-title">Comments</h3>
                                        </div>

                                        <div class="box-body table-responsive">
                                                <div id="example2_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                                        <table id="example2" class="table table-bordered table-hover dataTable" aria-describedby="example2_info">
                                                                <tr>
                                                                        <th style="width: 10px">#</th>
                                                                        <th >User Name</th>
                                                                        <th>Comment</th>
                                                                        <th>Comment Time</th>
                                                                </tr>

                                                                <tr>

                                                                        <input name = "id" type="hidden" value= >
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>



                                                                </tr>


                                                        </table>
                                                </div>
                                        </div>
                                </div>
                        </div>

                        <div class="col-md-2">
                        </div>
                </div>

                <!-- Editor -->
                <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8">
                                <div class="form-group">
                                        <label>Leave Your Comment Here</label>
                                        <input type="text" class="form-control" placeholder="Enter comment"><br/>
                                        <div class="row">
                                                <div class="col-md-4">
                                                </div>
                                                <div class="col-md-4">
                                                        <button class="btn btn-success btn-lg btn-block">Submit</button>
                                                </div>
                                                <div class="col-md-4">
                                                </div>
                                        </div>

                                </div>

                        </div>
                        <div class="col-md-2">
                        </div>
                </div>
        </div>
</div>
<%= render 'layouts/footer' %>
</body>