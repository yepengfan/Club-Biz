<body class="bg-gray" >
<%= render 'layouts/home' %>
<%= render 'layouts/nav' %>
<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">			
			<div class="row">
				<% @events.each do |event|%>
				<div class="col-md-4">
					<div class="thumbnail">
						<img alt="300x200" src="http://lorempixel.com/600/200/people">
						<div class="caption">
							<h3>
								<%= event.name %>
							</h3>
							<p>
								<%= event.desc %>
							</p>
							<p>
								<%= link_to event.name, controller: "events", action: "reserve_event", id: event.id, class: "btn btn-primary"%>
							</p>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>
</body>
