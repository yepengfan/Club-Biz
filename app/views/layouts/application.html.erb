<!DOCTYPE html>
<html>
<head>
  <title>Club-Biz</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-static-top navbar-inverse" role="navigation">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-links">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Club-Biz", root_path, class: "navbar-brand emph" %>
      <div class="collapse navbar-collapse" id="navbar-links">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
          <li><%= link_to "Account", my_account_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input class="form-control" type="text" />
            </div> <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li> 
          <% elsif admin_signed_in?%>
          <li><%= link_to current_admin.email, edit_admin_registration_path %></li>
          <li><%= link_to "Log Out", destroy_admin_session_path, method: :delete %></li>
          <% else %>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input class="form-control" type="text" />
            </div> <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <li><%= link_to "Register", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
</body>
</html>

