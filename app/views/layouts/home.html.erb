<!-- don't render with account -->
<!DOCTYPE html>
<html>
<head>
  <title>Club-Biz Home</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>


  <%= stylesheet_link_tag "bootstrap.min", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "font-awesome.min", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "ionicons.min", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "morris/morris", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "jvectormap/jquery-jvectormap-1.2.2", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "fullcalendar/fullcalendar", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "daterangepicker/daterangepicker-bs3", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "fullcalendar/fullcalendar", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "bootstrap-wysihtml5/bootstrap3-wysihtml5.min", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "AdminLTE", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "datatables/dataTables.bootstrap", media: "all", "data-turbolinks-track" => true %>
</head>
<body class="skin-blue">

  <header class="header">
    <a> 
      <!-- Add the class icon to your logo image or logo icon to add the margining -->
      <%= link_to "Club-Biz", root_path, class: "logo" %>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
        <span><% if user_signed_in? %><%= link_to "Account", my_account_path %><% end %></span>
      </a>

        <div class="navbar-right">
          <ul class="nav navbar-nav">
            <!-- User Account: style can be found in dropdown.less -->
            <li class="dropdown user user-menu">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <i class="glyphicon glyphicon-user"></i>
                <% if user_signed_in? %>
                <span><%= current_user.full_name %></span>                               
                <% elsif admin_signed_in?%>
                <span><%= current_admin.email %></span>
                <% end %>
                <i class="caret"></i>
              </a>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header bg-light-blue">
                  <img src="img/avatar3.png" class="img-circle" alt="User Image" />
                  <p>
                    <% if user_signed_in? %>
                    <li><%= current_user.full_name %></li>                             
                    <% elsif admin_signed_in?%>
                    <li><%= current_admin.email %></li>
                    <% end %>
                  </p>
                </li>
                <!-- Menu Body -->
                <li class="user-body">
                  <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                  </div>
                </li>
                <!-- Menu Footer-->

                <li class="user-footer">
                  <div class="pull-left">
                    <% if user_signed_in? %>
                    <a><%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-default btn-flat" %></a>
                    <% elsif admin_signed_in?%>
                    <a><%= link_to "Edit Profile", edit_admin_registration_path, class: "btn btn-default btn-flat" %></a>
                    <% else %>
                    <%= link_to "Register", new_user_registration_path, class: "btn btn-default btn-flat"  %>
                    <% end %>
                  </div>
                  <div class="pull-right">
                    <% if user_signed_in? %>
                    <a><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat"%></a>
                    <% elsif admin_signed_in?%>
                    <a><%= link_to "Sign Out", destroy_admin_session_path, method: :delete, class: "btn btn-default btn-flat" %></a>
                    <% else %>
                    <a><%= link_to "Sign In", new_user_session_path, class: "btn btn-default btn-flat" %>
                    </a>
                    <% end %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">

      <%= yield %>
    </div><!-- ./wrapper -->

    <%= javascript_include_tag "jquery.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "jbootstrap.min" "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/morris/morris.min" "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/sparkline/jquery.sparkline.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/jvectormap/jquery-jvectormap-1.2.2.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/jvectormap/jquery-jvectormap-world-mill-en", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/fullcalendar/fullcalendar.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/jqueryKnob/jquery.knob", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/daterangepicker/daterangepicker", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/iCheck/icheck.min", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "AdminLTE/app", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "AdminLTE/dashboard", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "AdminLTE/demo", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/datatables/jquery.dataTables", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "AdminLTE/demo", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "AdminLTE/app", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "plugins/datatables/dataTables.bootstrap", "data-turbolinks-track" => true %>
  </body>
  </html>

